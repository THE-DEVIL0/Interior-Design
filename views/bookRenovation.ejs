<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Renovation | Radiant Interiors</title>
  <link href="/css/output.css" rel="stylesheet" />
</head>
<body class="bg-black text-white min-h-screen">

  <!-- Header -->
  <div class="container mx-auto py-10 px-4">
    
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/services" class="inline-block bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition duration-200">
        ‚Üê Back to Services
      </a>
    </div>

    <h1 class="text-4xl font-bold text-center text-white mb-10">Book a Renovation Service</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      
      <!-- CARD COMPONENT -->
      <% const services = [
        {
          img: "/images/L7nBRvsxgT6qAWnoxTpCdU.jpg",
          title: "Living Room Makeover",
          desc: "Upgrade your living space with a fresh modern design. Includes flooring, lighting, and decor."
        },
        {
          img: "/images/kitchen.png",
          title: "Kitchen Remodeling",
          desc: "Transform your kitchen into a sleek, functional culinary haven. Appliances included."
        },
        {
          img: "/images/Bedroom-2.png",
          title: "Bedroom Interior",
          desc: "Design a calm and luxurious retreat with our bedroom interior package. Includes wardrobe and lighting."
        },
        {
          img: "/images/bathroom-renovation.jpg",
          title: "Bathroom Renovation",
          desc: "Stylish fixtures and functional layout upgrades for your bathroom. Includes shower and tiling work."
        },
        {
          img: "/images/beaufort-sc-white-house-2000-b24713dcd2bd49aebff022e8eb6577b7.jpg",
          title: "Full Home Revamp",
          desc: "A complete home makeover tailored to your style and needs. Includes project management."
        }
      ]; %>

      <% services.forEach(service => { %>
        <div class="bg-neutral-900 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition duration-300">
          <img src="<%= service.img %>" alt="<%= service.title %>" class="w-full h-56 object-cover">
          <div class="p-5">
            <h2 class="text-xl font-semibold mb-2"><%= service.title %></h2>
            <p class="text-gray-300 mb-4"><%= service.desc %></p>
            <a href="/book-renovation/<%= encodeURIComponent(service.title) %>" 
                class="inline-block bg-cyan-600 hover:bg-cyan-700 text-white px-4 py-2 rounded-lg transition">
               Book Now
             </a>
          </div>
        </div>
      <% }) %>

    </div>
  </div>

</body>
</html>
